<h1 class="page-header">Administrador</h1>
<div class="panel panel-default">
	<div class="panel-heading">
		Listando Administradores
		<%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px;" do%>
		<i class="fa fa-plus"></i>
		<% end -%>
	</div>
	<!-- /.panel-heading -->
	<div class="panel-body">
		<div class="table-responsive">
			<table class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Descrição</th>
						<th>Opção</th>
					</tr>
				</thead>
				<tbody>
					<% @admins.each do |admin| %>
					<tr>
						<td><%= admin.id%></td>
						<td><%= admin.email%></td>
						<td style=" width: 150px;">
							<%= link_to edit_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do%>
							<i class="fa fa-edit"></i>
							<% end -%>
							<% if current_admin.id != admin.id %>
							<%= link_to backoffice_admin_path(admin), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: "Você deseja excluir <b>#{admin.email}</b> ?"} do %>
							<i class="fa fa-minus"></i>
							<% end -%>
							<% else %>
							<a class="btn btn-danger btn-circle" disabled = "disabled">
								<i class="fa fa-minus"></i>
							</a>
							<% end -%>
						</td>
					</tr>
					<% end -%>
				</table>
			</div>
			<!-- /.table-responsive -->
		</div>
		<!-- /.panel-body -->
	</div>