<div class="page-heading">
    <h1 class="page-title">Administrador</h1>
</div>

<% if @admin.errors.any? %>
<div class="alert alert-danger alert-dismissable fade show">
    <button class="close" data-dismiss="alert" aria-label="Close">×</button>
    <% @admin.errors.full_messages.each do |message|  %>
    <%= message %><br>
    <% end -%>

</div>
<% end -%>


<div class="page-content fade-in-up">
    <div class="ibox">
        <div class="ibox-head">
            <div class="ibox-title"><%= action %></div>
        </div>
        <div class="ibox-body" style="">
            <%= form_for([:backoffice, @admin]) do |f| %>
            <div class="">
                <div class="form-group">
                    <label>Nome</label>
                    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <%#= f.collection_check_boxes :role_ids, Role.all, :id, :name,
                    {:item_wrapper_class => 'ui-checkbox'} %>
                    <%= f.select :role_ids, options_for_select(Role.all.map{|role| [role.name, role.id]}, @admin.role_ids), {},  {:multiple => true, inlcude_blank: false, class: "form-control input-sm selectpicker"} %>
                </div>

                <div class="form-group">
                    <label>Senha</label>
                    <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
                </div>
                <div class="form-group">
                    <label>Confirmação da Senha</label>
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmação da Senha" %>
                </div>
                <button type="submit" class="btn btn-default">Salvar</button>
                <% end -%>
            </div>
        </div>
    </div>
</div>
